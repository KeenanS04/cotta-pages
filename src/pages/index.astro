        //     const methodsDiagram = document.getElementById("methods-diagram");
        //     const rect = methodsDiagram.getBoundingClientRect();
        //     if (rect.top < window.innerHeight / 2 && rect.bottom > window.innerHeight / 3) {
        //         methodsDiagram.classList.add("expanded");
        //     } else {
        //         methodsDiagram.classList.remove("expanded");
        //     }
        // });
    </script>
</body>
</html>
